<Window x:Class="ExperimentWithControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentWithControls"
        mc:Ignorable="d"
        Title="Experiment With Controls" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Enter a number"
               Grid.Row="0"
               Grid.Column="0"
               FontSize="18"
               HorizontalAlignment="Left"  
               VerticalAlignment="Top"
               Margin="10, 10, 0, 0"/>

        <TextBox x:Name="numberTextBox" 
                Grid.Row="0"
                Grid.Column="0"
                Text="0"
                FontSize="18"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10, 49, 0, 0"
                Width="120"
                TextWrapping="Wrap" 
                PreviewTextInput="NumberTextBox_PreviewTextInput"
                TextChanged="NumberTextBox_TextChanged"/>

        <TextBlock x:Name="number"
                   Grid.Row="0"
                   Grid.Column="1"
                   Text="#"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"/>

        <RadioButton Content="1" HorizontalAlignment="Left" Margin="200,49,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton Content="2" HorizontalAlignment="Left" Margin="230,49,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton Content="3" HorizontalAlignment="Left" Margin="260,49,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton Content="4" HorizontalAlignment="Left" Margin="200,74,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton Content="5" HorizontalAlignment="Left" Margin="230,74,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton Content="6" HorizontalAlignment="Left" Margin="260,74,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>

        <ListBox x:Name="myListBox"
                 Grid.Row="1"
                 Grid.Column="0"
                 Margin="10" 
                 SelectionChanged="MyListBox_SelectionChanged">
            <ListBoxItem Content="1"/>
            <ListBoxItem Content="2"/>
            <ListBoxItem Content="3"/>
            <ListBoxItem Content="4"/>
            <ListBoxItem Content="5"/>
        </ListBox>

        <ComboBox x:Name="readOnlyComboBox" 
                  Grid.Row="1" 
                  Grid.Column="1" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top" 
                  Width="120"
                  Margin="10, 10, 0, 0" 
                  SelectionChanged="ReadOnlyComboBox_SelectionChanged">
            <ListBoxItem Content="1"/>
            <ListBoxItem Content="2"/>
            <ListBoxItem Content="3"/>
            <ListBoxItem Content="4"/>
            <ListBoxItem Content="5"/>
        </ComboBox>

        <ComboBox x:Name="editableComboBox" 
                  Grid.Row="1" 
                  Grid.Column="1" 
                  HorizontalAlignment="Right" 
                  VerticalAlignment="Top" 
                  Width="120"
                  Margin="0, 10, 10, 0" 
                  IsEditable="True"
                  PreviewTextInput="NumberTextBox_PreviewTextInput"
                  TextBoxBase.TextChanged="EditableComboBox_TextChanged">
            <ListBoxItem Content="1"/>
            <ListBoxItem Content="2"/>
            <ListBoxItem Content="3"/>
            <ListBoxItem Content="4"/>
            <ListBoxItem Content="5"/>
        </ComboBox>

        <Slider x:Name="smallSlider" 
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="10,10,0,0" 
                Width="120" 
                AutoToolTipPlacement="TopLeft" 
                Minimum="1" Maximum="5" 
                ValueChanged="SmallSlider_ValueChanged"/>

        <Slider x:Name="bigSlider"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Center"
                Margin="10"
                AutoToolTipPlacement="TopLeft" 
                Value="7183876962"
                Minimum="1111111111" Maximum="9999999999" 
                ValueChanged="BigSlider_ValueChanged"/>
    </Grid>
</Window>
